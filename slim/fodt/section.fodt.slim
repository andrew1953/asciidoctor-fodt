- slevel = @level == 0 && @special ? 1 : @level
- if slevel == 1
  text:h text:style-name="sect1" text:outline-level="1" 
    text:bookmark-start text:name="#{@id}" 
    |#{title}
    text:bookmark-end text:name="#{@id}"
  =content
